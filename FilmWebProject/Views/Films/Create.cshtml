@model FilmWebProject.Core.ViewModels.CreateFilmFormViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Films"))
{
    <div class="form-group">
        @Html.LabelFor(f => f.Title)
        @Html.TextBoxFor(f => f.Title, new { @class = "form-control", @placeholder = "Enter the title" })
    </div>

    <div class="form-group">
        @Html.LabelFor(f => f.Duration)
        @Html.TextBoxFor(f => f.Duration, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(f => f.Director)
        @Html.TextBoxFor(f => f.Director, new { @class = "form-control", @placeholder = "Enter the director" })
    </div>

    <div class="form-group">
        @Html.LabelFor(f => f.Scriptwriter)
        @Html.TextBoxFor(f => f.Scriptwriter, new { @class = "form-control", @placeholder = "Enter the screenwriter" })
    </div>

    <div class="form-group">
        @Html.LabelFor(f => f.Genre)
        @Html.DropDownListFor(f => f.Genre, new SelectList(Model.Genres, "Id", "Name"), "", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(f => f.Production)
        @Html.TextBoxFor(f => f.Production, new { @class = "form-control", @placeholder = "Production" })
    </div>

    <div class="form-group">
        @Html.LabelFor(f => f.ReleaseDate)
        @Html.TextBoxFor(f => f.ReleaseDate, new { @class = "form-control", @placeholder = "eg 6 May 2001" })
        @Html.ValidationMessageFor(f => f.ReleaseDate)
    </div>

    <div class="form-group">
        @Html.LabelFor(f => f.BoxOffice)
        @Html.TextBoxFor(f => f.BoxOffice, new { @class = "form-control", @placeholder = "Box-office" })
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
}