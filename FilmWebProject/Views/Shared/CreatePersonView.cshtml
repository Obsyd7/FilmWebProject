@model FilmWebProject.Core.ViewModels.CreatePersonFormViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create a new @ViewBag.RoleType</h2>

@using (Html.BeginForm("Create", (string)ViewBag.ControllerName))
{
    <div class="form-group">
        @Html.LabelFor(f => f.FirstName)
        @Html.TextBoxFor(f => f.FirstName, new { @class = "form-control", @placeholder = "Enter the firstname" })
    </div>

    <div class="form-group">
        @Html.LabelFor(f => f.LastName)
        @Html.TextBoxFor(f => f.LastName, new { @class = "form-control", @placeholder = "Enter the lastname" })
    </div>

    <div class="form-group">
        @Html.LabelFor(f => f.DateOfBirth)
        @Html.TextBoxFor(f => f.DateOfBirth, new { @class = "form-control", @placeholder = "Enter the birthday" })
    </div>

    <div class="form-group">
        @Html.LabelFor(f => f.PlaceOfBirth)
        @Html.TextBoxFor(f => f.PlaceOfBirth, new { @class = "form-control", @placeholder = "Enter place of birth" })
    </div>

    <div class="form-group">
        @Html.LabelFor(f => f.Height)
        @Html.TextBoxFor(f => f.Height, new { @class = "form-control", @placeholder = "Enter height" })
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}